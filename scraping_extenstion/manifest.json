{
  "manifest_version": 2,
  "name": "Limbo",
  "version": "1.0",
  "description": "Scrapes text content from <p> tags on the active tab",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
      "tabs",
      "declarativeContent",
      "storage",
      "<all_urls>"
  ],
  "background": {
      "scripts": []
  },
  "browser_action": {
  },
  "content_scripts": [
      {
          "matches": [
              "https://bc.game/game/limbo"
          ],
          "js": [
              "content.js"
          ]
      }
  ]
}